			caption="{@sti7}{s16}↑" clicksound="button_click_big" oversound="button_over" hittest="true"
			LBtnUpScp="TPCHATSYS_ON_BTN_TOP"/>
		<button name="btn_bottom" rect="0 0 30 30" margin="0 0 90 0" layout_gravity="right top"
			caption="{@sti7}{s16}↓" clicksound="button_click_big" oversound="button_over" hittest="true"
