	<input hittest="true" moveable="true" moveintitlebar="false" hittestframe="true"/>
	<option visible="true" hideable="true" useimageitem="true" closebutton="false" savelayout="true"/>
	<script LBtnUpScp="TPCAHTSYS_LBTNUP"/>
